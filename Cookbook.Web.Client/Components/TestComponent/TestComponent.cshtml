@typeparam TItem

<h2>Child component</h2>

<table class="table">
    <thead>
        <tr>@TableHeader</tr>
    </thead>
    <tbody>
        @foreach (var item in Items) {
            <tr>@RowTemplate(item)</tr>
        }
    </tbody>
    <tfoot>
        <tr>@TableFooter</tr>
    </tfoot>
</table>

@functions {

    [Parameter]
    RenderFragment TableHeader { get; set; }

    [Parameter]
    RenderFragment<TItem> RowTemplate { get; set; }

    [Parameter]
    RenderFragment TableFooter { get; set; }

    [Parameter]
    IEnumerable<TItem> Items { get; set; }

}