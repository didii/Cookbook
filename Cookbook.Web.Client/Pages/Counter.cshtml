@page "/counter"
@using Cookbook.Web.Client.JsLib

<h1>Counter</h1>

<p ref="p">Current count: @currentCount</p>

<div class="col-xl-4 form-group">
    <input ref="input" class="form-control" value="Lalala"/>
</div>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    private ElementRef p;
    private ElementRef input;

    int currentCount = 0;

    void IncrementCount() {
        currentCount++;
    }

    protected override void OnInit() {
        p.Hide();
    }

}